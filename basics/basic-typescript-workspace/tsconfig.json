    "target": "es2016",
    "module": "commonjs",

    "allowJs": true,
    "checkJs": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
      "**/node_modules/*",
      "**/*.spec.ts"
  ]
}
